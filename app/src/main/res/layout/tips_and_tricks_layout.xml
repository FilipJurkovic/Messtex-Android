<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="101dp"
    android:layout_height="135dp"
    android:background="@drawable/background_tips_and_tricks_card"
    android:id="@+id/tips_card">

    <ImageView
        android:id="@+id/tipsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bulb" />

    <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextAppearance.Messtex.ParagraphBold"
        android:textColor="@color/primary"
        android:text="Save Energy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipsIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>