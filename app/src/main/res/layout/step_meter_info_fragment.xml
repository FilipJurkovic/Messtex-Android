<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.view.StepMeterInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/meterIdText"
            android:layout_width="252dp"
            android:layout_height="39dp"
            android:layout_marginBottom="24dp"
            android:text="Meter Serial number"
            app:layout_constraintBottom_toTopOf="@+id/meterReadingText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/meterReadingText"
            android:layout_width="252dp"
            android:layout_height="39dp"
            android:layout_marginBottom="24dp"
            android:text="Meter Reading"
            app:layout_constraintBottom_toTopOf="@+id/meterTypeList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />


        <Spinner
            android:id="@+id/meterTypeList"
            android:entries="@array/meter_types_array"

            android:layout_width="252dp"
            android:layout_height="27dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/openPixolousButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/openPixolousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Read with camera"
            app:layout_constraintBottom_toTopOf="@+id/postApi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/postApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="218dp"
            android:layout_height="189dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/meterIdText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>