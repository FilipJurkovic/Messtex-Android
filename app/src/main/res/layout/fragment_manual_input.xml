            <TextView
                android:id="@+id/textView3"
                style="@style/TextAppearance.Messtex.ParagraphBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/report_comments_or_defects"
                android:textColor="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/reportMessage"
                app:layout_constraintStart_toStartOf="@+id/readingDate"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reportMessage"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reportMessageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:hint="@string/message" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/nextButtonManualInput"
                android:layout_width="327dp"
                android:layout_height="50dp"
                android:layout_marginTop="47dp"
                android:layout_marginBottom="29dp"
                android:text="@string/next"
                android:textColor="@color/light"
                style="@style/TextAppearance.Messtex.ParagraphBold"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/background_button_main"
                android:foreground="@drawable/foreground_button_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reportMessage" />
