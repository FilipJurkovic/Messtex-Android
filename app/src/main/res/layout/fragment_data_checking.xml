<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DataCheckingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="72dp"
        android:layout_height="46dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="732dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView22"
                style="@style/TextAppearance.Messtex.Headline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Contact details"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="393dp"
                    android:layout_height="570dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reading_paper"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/heatLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="53dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="19dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_heat_meter" />

                        <TextView
                            android:id="@+id/heatMeter"
                            style="@style/TextAppearance.Messtex.ParagraphBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="Heat meter"
                            android:textColor="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/heatMeterId"
                        style="@style/TextAppearance.Messtex.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Nr. 01572496259"
                        android:textColor="@color/tertiary" />
                    <TextView
                        android:id="@+id/heatMeterValue"
                        style="@style/TextAppearance.Messtex.ParagraphBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0198456,1"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <View
                    android:id="@+id/break1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginStart="43dp"
                    android:background="@color/tertiary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heatLayout" />

                <LinearLayout
                    android:id="@+id/heatAllocatorLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="53dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/break1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="19dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_heat_alocator" />

                        <TextView
                            android:id="@+id/heatAllocator"
                            style="@style/TextAppearance.Messtex.ParagraphBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="Heat cost allocator"
                            android:textColor="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/heatAllocatorId"
                        style="@style/TextAppearance.Messtex.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Nr. 01572496259"
                        android:textColor="@color/tertiary" />
                    <TextView
                        android:id="@+id/heatAllocatorValue"
                        style="@style/TextAppearance.Messtex.ParagraphBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0198456,1"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <View
                    android:id="@+id/break2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginStart="43dp"
                    android:background="@color/tertiary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heatAllocatorLayout" />

                <LinearLayout
                    android:id="@+id/waterLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="53dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/break2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="19dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_water_meter" />

                        <TextView
                            android:id="@+id/waterMeter"
                            style="@style/TextAppearance.Messtex.ParagraphBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="Water meter"
                            android:textColor="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/waterMeterId"
                        style="@style/TextAppearance.Messtex.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Nr. 01572496259"
                        android:textColor="@color/tertiary" />
                    <TextView
                        android:id="@+id/waterMeterValue"
                        style="@style/TextAppearance.Messtex.ParagraphBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0198456,1"
                        android:textColor="@color/dark" />
                </LinearLayout>

                <View
                    android:id="@+id/break3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginStart="43dp"
                    android:background="@color/tertiary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/waterLayout" />



                <LinearLayout
                    android:id="@+id/contactLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="53dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/break3">



                        <TextView
                            android:id="@+id/contact"
                            style="@style/TextAppearance.Messtex.ParagraphBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/TextAppearance.Messtex.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Jessica Miessen"
                        android:textColor="@color/dark" />
                    <TextView
                        android:id="@+id/email"
                        style="@style/TextAppearance.Messtex.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Jessica Miessen"
                        android:textColor="@color/dark" />
                    <TextView
                        android:id="@+id/address"
                        style="@style/TextAppearance.Messtex.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Jessica Miessen"
                        android:textColor="@color/dark" />
                    <TextView
                        android:id="@+id/city"
                        style="@style/TextAppearance.Messtex.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Jessica Miessen"
                        android:textColor="@color/dark" />
                </LinearLayout>


                <View
                    android:id="@+id/break4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginStart="43dp"
                    android:background="@color/tertiary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contactLayout" />


                <LinearLayout
                    android:id="@+id/readingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="53dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/break4">

                    <TextView
                        android:id="@+id/title"
                        style="@style/TextAppearance.Messtex.ParagraphBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason for reading"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/reason"
                        style="@style/TextAppearance.Messtex.Paragraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Annual billing"
                        android:textColor="@color/dark" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/button4"
                style="@style/TextAppearance.Messtex.ParagraphBold"
                android:layout_width="327dp"
                android:layout_height="50dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="75dp"
                android:text="Next"
                android:textColor="@color/light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>