<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanningSuccessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="205dp"
            android:layout_height="171dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="105dp"
            android:contentDescription="HomeImage top"
            android:src="@drawable/successful_read"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextAppearance.Messtex.Headline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Meter readings\n successfully transmitted"
            android:textAlignment="center"
            android:textColor="@color/primary"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            style="@style/TextAppearance.Messtex.Paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:text="Thank you {NAME} for your contribution.\nYour data has been successfully transmitted. \nWith your help we were able to save 3g of CO₂."
            android:textAlignment="center"
            android:textColor="@color/dark"
            tools:ignore="HardcodedText" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:layout_marginTop="74dp"
                android:contentDescription="Earth illustration"
                android:scaleType="fitXY"
                android:src="@drawable/rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="101dp"
                android:layout_height="122dp"
                android:layout_marginBottom="219dp"
                android:contentDescription="Rectangle"
                android:src="@drawable/earth_illustration"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextAppearance.Messtex.Headline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="156dp"
                android:text="Help us protect the \n environment."
                android:textAlignment="center"
                android:textColor="@color/light"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/co2_livedata"
                style="@style/TextAppearance.Messtex.Headline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="000345"
                android:textAlignment="center"
                android:textColor="@color/light"
                android:textSize="56sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TextAppearance.Messtex.Paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="kilograms of CO₂ \n we have already saved together!"
                android:textAlignment="center"
                android:textColor="@color/light"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/co2_livedata"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/learnMoreButton"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="210dp"
            android:text="Learn more"
            style="@style/TextAppearance.Messtex.TinyBold"
            android:background="@drawable/background_button_outlined"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="@color/primary_tint"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/backToHomeButton"
            style="@style/TextAppearance.Messtex.ParagraphBold"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:text="Next"
            android:gravity="center"
            android:background="@drawable/background_button_main"
            android:textColor="@color/light"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            tools:ignore="HardcodedText" />


    </LinearLayout>
</ScrollView>